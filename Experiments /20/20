from sklearn.linear_model import LinearRegression
import pandas as pd
data = {'Month': [1,2,3,4,5], 'Sales': [200,220,250,300,320]}
df = pd.DataFrame(data)
X = df[['Month']]
y = df['Sales']
model = LinearRegression()
model.fit(X, y)
month = int(input("Enter future month number: "))
print("Predicted Sales:", model.predict([[month]])[0])
