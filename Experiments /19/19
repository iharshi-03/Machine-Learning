from sklearn.naive_bayes import GaussianNB
import pandas as pd
data = {'Income': [50000,30000,70000,40000], 'CreditScore': [650,500,800,600], 'Loan': [1,0,1,0]}
df = pd.DataFrame(data)
X = df[['Income','CreditScore']]
y = df['Loan']
model = GaussianNB()
model.fit(X, y)
income = float(input("Enter Income: "))
credit = float(input("Enter Credit Score: "))
print("Loan Approved (1=Yes,0=No):", model.predict([[income, credit]])[0])
